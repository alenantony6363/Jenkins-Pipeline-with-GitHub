                echo "Building..."
            }
            post{
                success{
                    mail to: "alenantony247@gmail.com",
                    subject: "Build Status Email",
                    body: "Build Was Successful"
                }
            }
            
        }
        stage("Test"){
            steps{
                echo "Testing..."
            }
        }
        stage("Deploy"){
            steps{
                echo "Deploying ..."
            }
        }
    }
}